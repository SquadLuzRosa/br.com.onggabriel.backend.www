# Django Secret Key - Keep this secret in production!
# Generate a new one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY="your-secret-key"

# Debug Mode - Set to 'false' in production
# Accepts: true/false, 1/0, yes/no (case-insensitive)
DEBUG="true"

# Django Environment - 'development' or 'production'
DJANGO_ENV="development"

# Django Port
DJANGO_PORT="8000"

# Database Configuration
# Option 1: Use DATABASE_URL (recommended for production with external DB)
DATABASE_URL="postgresql://user:password@host:5432/dbname"

# Option 2: Use individual variables (for docker-compose with internal DB)
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_DB="onggabriel_db"
POSTGRES_HOST="data_base"
POSTGRES_PORT="5432"

# Frontend URL for CORS
FRONTEND_URL="http://localhost:3000"

# Allowed host
ALLOWED_HOST="123.45.67.89"
